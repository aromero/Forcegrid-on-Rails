<h1>Nueva oferta</h1>
<%= form_for(@bid) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :pricing_method %><br />
    <%= f.text_field :pricing_method %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
	<%= hidden_field_tag 'bid[job_id]', params[:job_id] %>
	<%= hidden_field_tag 'bid[worker_id]', current_user.owner.id %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', url_for(:back) %>