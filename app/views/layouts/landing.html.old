  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title><%= content_for?(:title) ? yield(:title) : "Forcegrid | Making IT Services easy for Small and Medium Business" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="canonical" href="http://www.forcegrid.com" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
    
    <%= stylesheet_link_tag 'style' %>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag "modernizr-1.6.min.js" %>
    
    <%= yield(:head) %>
  </head>
  <body lang="en">
    <nav>
      <a href="#">What is Forcegrid?</a>
      <a href="#">Contact Us</a>
    <nav>
    
    <div id="container">
      <header>
        <hgroup>
          <h1>Making IT Services easy for Small and Medium Business</h1>
          <h4>Find the solution, see what is included, get proposals and manage your team online.</h4>
        </hgroup>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
      </header>
    
      <div id="main" role="main">
        <%= yield %>
      </div>
    </div>
    
    <footer id="main-footer">
      <p>Forcegrid 2011 - ARR </p>
    </footer>
   
    <% if Rails.env == 'development' -%>
    <%= javascript_include_tag "jquery-1.5.1.js" %>
    <% else -%>
    <script src="http://www.google.com/jsapi"></script>
    <script>google.load("jquery", "1.5.1");</script>
    <% end -%>
    <%= javascript_include_tag "landing.js" %>
    <%= yield(:custom_scripts) %>
  
