  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Forcegrid - <%= controller.action_name %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="canonical" href="http://www.forcegrid.com" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <%= stylesheet_link_tag 'reset', 'custom' %>
    <%= csrf_meta_tag %>
    
    <%= javascript_include_tag "modernizr-1.6.min.js" %>
  </head>
  <body lang="en">
    
  <div id="container">
  <!-- START Header -->
  	<div id="header">
  		<div class="headerTop clearfix">
  			<div class="logo"><a href="/"><img src="/images/logo_forceGrid.png" alt="ForceGrid"></a></div>
  			<div class="headerRightContent">
  				<div class="headerSecNav clearfix">
                      <%= render :partial => 'layouts/login_menu' %>
  				</div>
  				<div class="search clearfix">
                      <%= render :partial => 'layouts/search_box' %>
  				</div>
  			</div>
  		</div>
  		<div class="headerMainNav clearfix">
  			<span class="left">&nbsp;</span>
  			<ul>
  				<li class="first"><a href="/why_us.html">Why us</a></li>
  				<li><a href="/how_we_work.html">How we work</a></li>
  				<li><a href="/resources.html">Resources</a></li>
  				<li><a href="/about_us.html">About us</a></li>
  			</ul>
  			<span class="right">&nbsp;</span>
  		</div>
  	</div>
  <!-- END Header -->

  <!-- START Content 1 col Template -->
  	<div id="content" class="singleCol clearfix">
  		<div class="firstCol hiliteContent">
  		<p style="color: green"><%= flash[:notice] %><%= flash[:error] %></p>
          <%= yield %>
  		</div>
  	</div>
  <!-- END Content 1 col Template -->

  <!-- START Footer -->
      <div id="footer">
      	<div class="footerNav clearfix">
      		<ul>
      			<li class="first"><a href="about_us.html">About Us</a></li>
      			<li><a href="#">Contact</a></li>
      			<li><a href="#">Blog</a></li>
      			<li><a href="#">Community</a></li>
      			<li><a href="#">Careers</a></li>
      			<li><a href="#">Terms and Conditions</a></li>
      		</ul>
      	</div>
      	<div class="legal">CompanyName. Inc. All rights Reserved</div>
      </div>
  <!-- END Footer -->
  </div>
  <% if Rails.env == 'development' -%>
  <%= javascript_include_tag "jquery-1.5.js", "application.js" %>
  <% else -%>
  <script src="http://www.google.com/jsapi"></script>
  <script>google.load("jquery", "1.5");</script>
  <%= javascript_include_tag "application.js" %>
  <% end -%>
  
